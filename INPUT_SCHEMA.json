              "CA",
              "JP",
              "AE",
              "SA",
              "BR",
              "MX",
              "SG",
              "TR",
              "NL",
              "AU"
          ],
          "enumTitles": [
              "amazon.com",
              "amazon.co.uk",
              "amazon.de",
              "amazon.es",
              "amazon.fr",
              "amazon.it",
              "amazon.in",
              "amazon.ca",
              "amazon.co.jp",
              "amazon.ae",
              "amazon.sa",
              "amazon.com.br",
              "amazon.com.mx",
              "amazon.sg",
              "amazon.com.tr",
              "amazon.nl",
              "amazon.com.au"
